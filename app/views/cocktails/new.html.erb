<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-offset-3 col-sm-6">
      <h1>Add a new cocktail</h1>
      <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name, placeholder: "name" %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.submit "post", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

