<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-offset-3 col-sm-6">
      <h1>Add a new dose</h1>
      <%= simple_form_for [@cocktail,@dose] do |f| %>
        <%= f.input :description, placeholder: "name" %>
        <%= f.association :ingredient %>
        <%= f.submit "post", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
